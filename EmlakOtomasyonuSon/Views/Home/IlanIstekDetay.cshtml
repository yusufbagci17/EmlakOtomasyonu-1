@model EmlakOtomasyonuSon.Models.IlanIstekDetayViewModel

@{
    ViewData["Title"] = Model.Ilan.IlanBaslik;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card bg-dark mb-4">
                <div class="card-body p-0">
                    <div id="propertyCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @if (!string.IsNullOrEmpty(Model.Ilan.IlanVResim))
                            {
                                <div class="carousel-item active">
                                    <img src="@Model.Ilan.IlanVResim" class="d-block w-100" alt="Vitrin Resmi">
                                </div>
                            }
                            @if (Model.Ilan.TblResimm != null)
                            {
                                @foreach (var resim in Model.Ilan.TblResimm)
                                {
                                    <div class="carousel-item">
                                        <img src="@resim.ResimYolu" class="d-block w-100" alt="İlan Resmi">
                                    </div>
                                }
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#propertyCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Önceki</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#propertyCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Sonraki</span>
                        </button>
                    </div>
                </div>
            </div>

            <div class="card bg-dark mb-4">
                <div class="card-body">
                    <h3 class="card-title">@Model.Ilan.IlanBaslik</h3>
                    <p class="card-text">@Model.Ilan.IlanAciklama</p>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Kategori:</strong> @Model.Ilan.TblKategori?.KategoriAd</p>
                            <p><strong>İşlem:</strong> @Model.Ilan.TblIslem?.IslemAd</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Fiyat:</strong> @Model.Ilan.IlanFiyat.ToString("N0") ₺</p>
                            <p><strong>Telefon:</strong> @Model.Ilan.IlanTelefon</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark">
                <div class="card-header">
                    <h4>Kullanıcı Mesajı</h4>
                </div>
                <div class="card-body">
                    <p><strong>Ad Soyad:</strong> @Model.IlanIstek.AdSoyad</p>
                    <p><strong>Telefon:</strong> @Model.IlanIstek.Telefon</p>
                    <p><strong>Email:</strong> @Model.IlanIstek.Email</p>
                    <p><strong>Mesaj:</strong> @Model.IlanIstek.Mesaj</p>
                    <p><strong>Gönderim Tarihi:</strong> @Model.IlanIstek.IstekTarihi.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            @if (Model.Ilan.IlanKategoriId == 1 && Model.Ilan.TblEvOzellikleri != null)
            {
                <div class="card bg-dark mb-4">
                    <div class="card-body">
                        <h3 class="mb-4">Ev Özellikleri</h3>
                        <h4 class="mb-3 mt-3">Genel Bilgiler</h4>
                        <div class="row g-4">
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-ruler-combined fa-2x mb-2 text-primary"></i><h5>Metrekare</h5><p>@Model.Ilan.TblEvOzellikleri.Metrekare m²</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-door-open fa-2x mb-2 text-primary"></i><h5>Oda Sayısı</h5><p>@Model.Ilan.TblEvOzellikleri.OdaSayisi</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-couch fa-2x mb-2 text-primary"></i><h5>Salon Sayısı</h5><p>@Model.Ilan.TblEvOzellikleri.SalonSayisi</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-building fa-2x mb-2 text-primary"></i><h5>Bina Yaşı</h5><p>@Model.Ilan.TblEvOzellikleri.BinaYasi</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-layer-group fa-2x mb-2 text-primary"></i><h5>Kat Sayısı</h5><p>@Model.Ilan.TblEvOzellikleri.KatSayisi</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-sort-numeric-up fa-2x mb-2 text-primary"></i><h5>Bulunduğu Kat</h5><p>@Model.Ilan.TblEvOzellikleri.BulunduguKat</p></div></div>
                        </div>
                        <h4 class="mb-3 mt-4">İç Özellikler</h4>
                        <div class="row g-4">
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-fire fa-2x mb-2 text-primary"></i><h5>Isıtma Türü</h5><p>@Model.Ilan.TblEvOzellikleri.IsitmaTuru</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-couch fa-2x mb-2 text-primary"></i><h5>Mobilya Takımı</h5><p>@(Model.Ilan.TblEvOzellikleri.MobilyaTakimi == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-shower fa-2x mb-2 text-primary"></i><h5>Duş Kabini</h5><p>@(Model.Ilan.TblEvOzellikleri.DusKabini == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-snowflake fa-2x mb-2 text-primary"></i><h5>Klima</h5><p>@(Model.Ilan.TblEvOzellikleri.Klima == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-hot-tub fa-2x mb-2 text-primary"></i><h5>Jakuzi</h5><p>@(Model.Ilan.TblEvOzellikleri.Jakuzi == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-fire fa-2x mb-2 text-primary"></i><h5>Şömine</h5><p>@(Model.Ilan.TblEvOzellikleri.Somine == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-elevator fa-2x mb-2 text-primary"></i><h5>Asansör</h5><p>@(Model.Ilan.TblEvOzellikleri.Asansor == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-archway fa-2x mb-2 text-primary"></i><h5>Balkon</h5><p>@(Model.Ilan.TblEvOzellikleri.Balkon == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-box-open fa-2x mb-2 text-primary"></i><h5>Eşyalı</h5><p>@(Model.Ilan.TblEvOzellikleri.EsyaliMi == true ? "Evet" : "Hayır")</p></div></div>
                        </div>
                        <h4 class="mb-3 mt-4">Dış Özellikler</h4>
                        <div class="row g-4">
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-parking fa-2x mb-2 text-primary"></i><h5>Otopark</h5><p>@(Model.Ilan.TblEvOzellikleri.Otopark == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-child fa-2x mb-2 text-primary"></i><h5>Oyun Parkı</h5><p>@(Model.Ilan.TblEvOzellikleri.OyunParki == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-shield-alt fa-2x mb-2 text-primary"></i><h5>Güvenlik</h5><p>@(Model.Ilan.TblEvOzellikleri.Guvenlik == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-user-tie fa-2x mb-2 text-primary"></i><h5>Kapıcı</h5><p>@(Model.Ilan.TblEvOzellikleri.Kapici == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-swimmer fa-2x mb-2 text-primary"></i><h5>Yüzme Havuzu</h5><p>@(Model.Ilan.TblEvOzellikleri.YuzmeHavuzu == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-dumbbell fa-2x mb-2 text-primary"></i><h5>Spor Salonu</h5><p>@(Model.Ilan.TblEvOzellikleri.SporSalonu == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-city fa-2x mb-2 text-primary"></i><h5>Site İçerisinde</h5><p>@(Model.Ilan.TblEvOzellikleri.SiteİcerisindeMi == true ? "Evet" : "Hayır")</p></div></div>
                        </div>
                    </div>
                </div>
            }
            @if (Model.Ilan.IlanKategoriId == 2 && Model.Ilan.Tblİsyeri != null)
            {
                <div class="card bg-dark mb-4">
                    <div class="card-body">
                        <h3 class="mb-4">İşyeri Özellikleri</h3>
                        <h4 class="mb-3 mt-3">Genel Bilgiler</h4>
                        <div class="row g-4">
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-ruler-combined fa-2x mb-2 text-primary"></i><h5>Metrekare</h5><p>@Model.Ilan.Tblİsyeri.Metrekare m²</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-building fa-2x mb-2 text-primary"></i><h5>Bina Yaşı</h5><p>@Model.Ilan.Tblİsyeri.BinaYasi</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-layer-group fa-2x mb-2 text-primary"></i><h5>Kat Sayısı</h5><p>@Model.Ilan.Tblİsyeri.KatSayisi</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-sort-numeric-up fa-2x mb-2 text-primary"></i><h5>Bulunduğu Kat</h5><p>@Model.Ilan.Tblİsyeri.BulunduguKat</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-briefcase fa-2x mb-2 text-primary"></i><h5>Kullanım Amacı</h5><p>@Model.Ilan.Tblİsyeri.KullanimAmaci</p></div></div>
                        </div>
                        <h4 class="mb-3 mt-4">İç Özellikler</h4>
                        <div class="row g-4">
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-fire fa-2x mb-2 text-primary"></i><h5>Isıtma Türü</h5><p>@Model.Ilan.Tblİsyeri.IsitmaTuru</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-snowflake fa-2x mb-2 text-primary"></i><h5>Klima</h5><p>@(Model.Ilan.Tblİsyeri.Klima == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-archway fa-2x mb-2 text-primary"></i><h5>Balkon</h5><p>@(Model.Ilan.Tblİsyeri.Balkon == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-toilet fa-2x mb-2 text-primary"></i><h5>Tuvalet</h5><p>@(Model.Ilan.Tblİsyeri.Tuvalet == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-elevator fa-2x mb-2 text-primary"></i><h5>Asansör</h5><p>@(Model.Ilan.Tblİsyeri.Asansor == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-warehouse fa-2x mb-2 text-primary"></i><h5>Depo</h5><p>@(Model.Ilan.Tblİsyeri.Depo == true ? "Var" : "Yok")</p></div></div>
                        </div>
                        <h4 class="mb-3 mt-4">Dış Özellikler</h4>
                        <div class="row g-4">
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-parking fa-2x mb-2 text-primary"></i><h5>Otopark</h5><p>@(Model.Ilan.Tblİsyeri.Otopark == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-shield-alt fa-2x mb-2 text-primary"></i><h5>Güvenlik</h5><p>@(Model.Ilan.Tblİsyeri.Guvenlik == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-user-tie fa-2x mb-2 text-primary"></i><h5>Kapıcı</h5><p>@(Model.Ilan.Tblİsyeri.Kapici == true ? "Var" : "Yok")</p></div></div>
                        </div>
                    </div>
                </div>
            }
            @if (Model.Ilan.IlanKategoriId == 3 && Model.Ilan.TblArsaOzellikleri != null)
            {
                <div class="card bg-dark mb-4">
                    <div class="card-body">
                        <h3 class="mb-4">Arsa Özellikleri</h3>
                        <h4 class="mb-3 mt-3">Genel Bilgiler</h4>
                        <div class="row g-4">
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-ruler-combined fa-2x mb-2 text-primary"></i><h5>Metrekare</h5><p>@Model.Ilan.TblArsaOzellikleri.Metrekare m²</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-money-bill-wave fa-2x mb-2 text-primary"></i><h5>Metrekare Fiyatı</h5><p>@Model.Ilan.TblArsaOzellikleri.MetrekareFiyati</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-map-marked-alt fa-2x mb-2 text-primary"></i><h5>İmar Durumu</h5><p>@Model.Ilan.TblArsaOzellikleri.ImarDurumu</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-file-contract fa-2x mb-2 text-primary"></i><h5>Tapu Durumu</h5><p>@Model.Ilan.TblArsaOzellikleri.TapuDurumu</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-briefcase fa-2x mb-2 text-primary"></i><h5>Kullanım Amacı</h5><p>@Model.Ilan.TblArsaOzellikleri.KullanimAmaci</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-mountain fa-2x mb-2 text-primary"></i><h5>Zemin Yapısı</h5><p>@Model.Ilan.TblArsaOzellikleri.ZeminYapisi</p></div></div>
                        </div>
                        <h4 class="mb-3 mt-4">Altyapı Özellikleri</h4>
                        <div class="row g-4">
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-bolt fa-2x mb-2 text-primary"></i><h5>Elektrik</h5><p>@(Model.Ilan.TblArsaOzellikleri.ElektrikVar == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-tint fa-2x mb-2 text-primary"></i><h5>Su</h5><p>@(Model.Ilan.TblArsaOzellikleri.SuVar == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-fire fa-2x mb-2 text-primary"></i><h5>Doğalgaz</h5><p>@(Model.Ilan.TblArsaOzellikleri.DogalgazVar == true ? "Var" : "Yok")</p></div></div>
                            <div class="col-md-3"><div class="property-feature"><i class="fas fa-road fa-2x mb-2 text-primary"></i><h5>Yol</h5><p>@(Model.Ilan.TblArsaOzellikleri.YolVar == true ? "Var" : "Yok")</p></div></div>
                        </div>
                    </div>
                </div>
            }
            <div class="card bg-dark">
                <div class="card-body">
                    <h3 class="mb-4">Açıklama</h3>
                    <p class="mb-0">@Model.Ilan.IlanAciklama</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .property-feature {
        background-color: rgba(255, 255, 255, 0.1);
        padding: 10px;
        border-radius: 8px;
        text-align: center;
    }

    .carousel-control-prev,
    .carousel-control-next {
        width: 5%;
        opacity: 0.8;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
        padding: 20px;
    }
</style> 