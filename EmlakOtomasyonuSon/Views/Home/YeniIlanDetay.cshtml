@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Yüklenen fotoğraf sayısını takip etmek için
        let uploadedPhotoCount = 0;

        // Fotoğraf önizleme fonksiyonu
        function previewImage(input, index) {
            const box = document.querySelector(`.photo-upload-box[data-index="${index}"]`);
            const previewImg = box.querySelector('.preview-img');
            const removeBtn = box.querySelector('.remove-photo');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    previewImg.src = e.target.result;
                    previewImg.style.display = 'block';
                    removeBtn.style.display = 'block';
                    box.classList.add('has-image');

                    if (!box.hasAttribute('data-counted')) {
                        uploadedPhotoCount++;
                        box.setAttribute('data-counted', 'true');
                    }

                    validatePhotos();
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        // Fotoğraf kaldırma fonksiyonu
        function removePhoto(index) {
            const box = document.querySelector(`.photo-upload-box[data-index="${index}"]`);
            const input = document.getElementById(`photo-${index}`);
            const previewImg = box.querySelector('.preview-img');
            const removeBtn = box.querySelector('.remove-photo');

            input.value = '';
            previewImg.src = '';
            previewImg.style.display = 'none';
            removeBtn.style.display = 'none';
            box.classList.remove('has-image');

            if (box.hasAttribute('data-counted')) {
                uploadedPhotoCount--;
                box.removeAttribute('data-counted');
            }

            validatePhotos();
        }

        // Fotoğraf sayısını doğrulama
        function validatePhotos() {
            const validationMsg = document.getElementById('photo-validation-message');
            const submitBtn = document.querySelector('button[type="submit"]');

            if (uploadedPhotoCount < 3) {
                validationMsg.textContent = 'En az 3 fotoğraf yüklemelisiniz!';
                submitBtn.disabled = true;
            } else {
                validationMsg.textContent = '';
                submitBtn.disabled = false;
            }
        }

        // Form gönderimi öncesi kontrol
        document.querySelector('form').addEventListener('submit', function (e) {
            if (uploadedPhotoCount < 3) {
                e.preventDefault();
                alert('En az 3 fotoğraf yüklemelisiniz!');
                return false;
            }
            return true;
        });

        // Sayfa yüklendiğinde doğrulama kontrolü yap
        document.addEventListener('DOMContentLoaded', validatePhotos);
    </script>
}

